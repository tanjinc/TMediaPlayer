<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:gravity="center_horizontal"
             android:background="#7c9">

        <com.tanjinc.tmediaplayer.widgets.WBShareView
            android:id="@+id/weibo_view"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_weibo_logo"/>

        <com.tanjinc.tmediaplayer.widgets.WXShareView
            android:id="@+id/wx_view"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:background="@drawable/ic_wx_logo"/>
        <com.tanjinc.tmediaplayer.widgets.WXShareView
            android:id="@+id/wx_timeline"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:background="@drawable/ic_pengyouquan_logo"/>
        <ImageView
            android:id="@+id/share_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_launcher"/>

</LinearLayout>