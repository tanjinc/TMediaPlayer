<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="#7c9"
             xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/share_item_container"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.tanjinc.tmediaplayer.widgets.WBShareView
            android:id="@+id/weibo_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_weibo_logo"/>

        <com.tanjinc.tmediaplayer.widgets.WXShareView
            android:id="@+id/wx_view"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:background="@drawable/ic_wx_logo"/>
        <com.tanjinc.tmediaplayer.widgets.WXShareView
            android:id="@+id/wx_timeline"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:background="@drawable/ic_pengyouquan_logo"/>

    </LinearLayout>

</FrameLayout>