        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:background="#ff7777"-->
        <!--android:layout_alignParentBottom="true">-->

    <!--</com.tanjinc.tmediaplayer.widgets.PlayerMenuWidget>-->

</RelativeLayout>